							<!--</ComboBox>-->
						</items>
						<Button text="{i18n>find}" width="100px" id="__button0" class="sapUiSmallMarginTop" press="onFindPressed" icon="sap-icon://sys-find"/>
					</VBox>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>