<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:html="http://www.w3.org/1999/xhtml"
	controllerName="POReportForSCM.controller.V_Create_PO">
	<App>
		<pages>
			<Page title="{i18n>createPoTitle}">
				<Panel expandable="true" expanded="false" headerText="{i18n>headerPOTitle}" width="auto" class="sapUiResponsiveMargin">
					<content>
						<sap.ui.layout.form:Form xmlns:sap.ui.layout.form="sap.ui.layout.form" editable="true" id="__form1">
							<sap.ui.layout.form:formContainers>
								<sap.ui.layout.form:FormContainer id="__container1">
									<sap.ui.layout.form:formElements>
										<sap.ui.layout.form:FormElement label="Company Code" id="CompanyCode_Label">
											<sap.ui.layout.form:fields>
												<Input width="50%" id="companyCode_input"/>
											</sap.ui.layout.form:fields>
										</sap.ui.layout.form:FormElement>
										<sap.ui.layout.form:FormElement label="Plant" id="plant_label">
											<sap.ui.layout.form:fields>
												<Input width="50%" id="plant_input"/>
											</sap.ui.layout.form:fields>
										</sap.ui.layout.form:FormElement>
									</sap.ui.layout.form:formElements>
								</sap.ui.layout.form:FormContainer>
							</sap.ui.layout.form:formContainers>
							<sap.ui.layout.form:layout>
								<sap.ui.layout.form:ResponsiveGridLayout id="__layout1"/>
							</sap.ui.layout.form:layout>
						</sap.ui.layout.form:Form>
					</content>
				</Panel>
				<Panel expandable="true" expanded="false" headerText="{i18n>itemTitle}" width="auto" class="sapUiResponsiveMargin">
					<content>
						<sap.ui.layout.form:Form xmlns:sap.ui.layout.form="sap.ui.layout.form" editable="true" id="__form2">
							<sap.ui.layout.form:formContainers>
								<sap.ui.layout.form:FormContainer id="__container2">
									<sap.ui.layout.form:formElements>
										<sap.ui.layout.form:FormElement label="Material Number" id="eleMaterialNo">
											<sap.ui.layout.form:fields>
												<Input width="50%" id="material_input"/>
											</sap.ui.layout.form:fields>
										</sap.ui.layout.form:FormElement>
										<sap.ui.layout.form:FormElement label="Batch" id="eleBatchNo">
											<sap.ui.layout.form:fields>
												<Input width="50%" id="batch_input"/>
											</sap.ui.layout.form:fields>
										</sap.ui.layout.form:FormElement>
										<sap.ui.layout.form:FormElement label="Quantity" id="eleQty">
											<sap.ui.layout.form:fields>
												<Input width="50%" id="quantity_input"/>
											</sap.ui.layout.form:fields>
										</sap.ui.layout.form:FormElement>
									
									</sap.ui.layout.form:formElements>
								</sap.ui.layout.form:FormContainer>
							</sap.ui.layout.form:formContainers>
							<sap.ui.layout.form:layout>
								<sap.ui.layout.form:ResponsiveGridLayout id="__layout2"/>
							</sap.ui.layout.form:layout>
						</sap.ui.layout.form:Form>
					</content>
					<headerToolbar>
						<Toolbar height="3rem">
							<Button icon="sap-icon://add" text="Pack Item" type="Emphasized" press="onPickPressed"/>
							<ToolbarSpacer/>
							<Button icon="sap-icon://sys-minus" text="Delete Row" type="Reject" press="onDelete"/>
							<!--<ToolbarSpacer/>-->
							<Button icon="sap-icon://save" text="Save" type="Accept" press="onSave"/>
						</Toolbar>
					</headerToolbar>
				</Panel>
				<Panel expandable="true" expanded="true" width="auto" class="sapUiResponsiveMargin">
					<content>
						<Table id="packItem" items="{/data}" mode="MultiSelect" growing="true" growingThreshold="4" growingScrollToLoad="false">
							<items>
								<ColumnListItem id="itemlist">
									<cells>
										<Text text="{Material}" id="Material"/>
										<Text text="{Batch}" id="Batch"/>
										<Text text="{Quantity}" id="Quantity"/>
									</cells>
								</ColumnListItem>
							</items>
							<columns>
								<Column id="material">
									<header>
										<Label text="Material" id="material_id"/>
									</header>
								</Column>
								<Column id="batch">
									<header>
										<Label text="Batch" id="batch_id"/>
									</header>
								</Column>
								<Column id="quan">
									<header>
										<Label text="Quantity" id="quan_id"/>
									</header>
								</Column>
							</columns>
						</Table>
					</content>
				</Panel>
			</Page>
		</pages>
	</App>
</mvc:View>
